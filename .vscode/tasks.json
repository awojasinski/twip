{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "cmake --build ${workspaceFolder}/build --parallel --config Debug -DUSE_HAL_DRIVER -DSTM32G431xx",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Load Firmware",
            "type": "shell",
            "command": "STM32_Programmer_CLI -c port=SWD -w ${workspaceFolder}/build/bin/twip.bin 0x08000000 -hardRst",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}